generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int           @id @default(autoincrement())
  name        String        @db.VarChar(60)
  role        Role          @default(PENGURUS)
  email       String        @unique
  password    String
  createdAt   DateTime      @default(now()) @db.Timestamp(6)
  updatedAt   DateTime      @default(now()) @db.Timestamp(6)
  member      Member?
  saving      Saving[]
  loan        Loan[]
  installment Installment[]
  cashbooks   Cashbook[]
}

model Member {
  id           Int           @id @default(autoincrement())
  name         String        @db.VarChar(255)
  dateOfBirth  DateTime
  createdAt    DateTime      @default(now()) @db.Timestamp(6)
  updatedAt    DateTime      @default(now()) @db.Timestamp(6)
  phone        String?
  address      String?       @db.VarChar(255)
  memberStatus MemberStatus  @default(AKTIF)
  userId       Int?          @unique
  user         User?         @relation(fields: [userId], references: [id])
  saving       Saving[]
  loan         Loan[]
  installment  Installment[]
  cashbooks    Cashbook[]
}

model Saving {
  id         Int        @id @default(autoincrement())
  memberId   Int
  userId     Int
  amount     Decimal    @db.Decimal(12, 2)
  date       DateTime   @default(now())
  savingType SavingType
  member     Member     @relation(fields: [memberId], references: [id])
  user       User       @relation(fields: [userId], references: [id])
  createdAt  DateTime   @default(now()) @db.Timestamp(6)
  updatedAt  DateTime   @default(now()) @db.Timestamp(6)
}

model Loan {
  id            Int           @id @default(autoincrement())
  memberId      Int
  userId        Int
  amount        Decimal       @db.Decimal(12, 2)
  LoanDate      DateTime      @default(now())
  Deadline      DateTime
  status        LoanStatus    @default(DIAJUKAN)
  member        Member        @relation(fields: [memberId], references: [id])
  user          User          @relation(fields: [userId], references: [id])
  createdAt     DateTime      @default(now()) @db.Timestamp(6)
  updatedAt     DateTime      @default(now()) @db.Timestamp(6)
  tenorOption   TenorOption   @relation(fields: [tenorOptionId], references: [id])
  installment   Installment[]
  tenorOptionId Int
}

model Installment {
  id             Int      @id @default(autoincrement())
  loanId         Int
  memberId       Int
  userId         Int
  amount         Decimal  @db.Decimal(12, 2)
  date           DateTime @default(now())
  isFromSukarela Boolean  @default(false)
  loan           Loan     @relation(fields: [loanId], references: [id])
  member         Member   @relation(fields: [memberId], references: [id])
  user           User     @relation(fields: [userId], references: [id])
  createdAt      DateTime @default(now()) @db.Timestamp(6)
  updatedAt      DateTime @default(now()) @db.Timestamp(6)
}

model SHUConfig {
  id        Int             @id @default(autoincrement())
  tahun     Int
  items     SHUConfigItem[]
  createdAt DateTime        @default(now())
}

model SHUConfigItem {
  id          Int       @id @default(autoincrement())
  shuConfigId Int
  key         String
  percent     Decimal   @db.Decimal(5, 2)
  shuConfig   SHUConfig @relation(fields: [shuConfigId], references: [id])
}

model LoanOption {
  id        Int      @id @default(autoincrement())
  amount    Int
  createdAt DateTime @default(now()) @db.Timestamp(6)
  updatedAt DateTime @default(now()) @db.Timestamp(6)
}

model TenorOption {
  id                Int      @id @default(autoincrement())
  tenor             Int
  name              String
  servicePercentage Int
  createdAt         DateTime @default(now()) @db.Timestamp(6)
  updatedAt         DateTime @default(now()) @db.Timestamp(6)
  loans             Loan[]
}

model Cashbook {
  id            Int                @id @default(autoincrement())
  type          CashType
  module        CashModule
  userId        Int
  referenceId   Int?
  referenceType CashReferenceType?
  memberId      Int?
  amount        Decimal            @db.Decimal(12, 2)
  balance       Decimal            @db.Decimal(12, 2)
  description   String
  date          DateTime           @default(now())
  createdAt     DateTime           @default(now()) @db.Timestamp(6)
  updatedAt     DateTime           @default(now()) @db.Timestamp(6)
  member        Member?            @relation(fields: [memberId], references: [id])
  user          User?              @relation(fields: [userId], references: [id])
}

enum CashType {
  IN
  OUT
}

enum CashModule {
  SAVING
  LOAN
  INSTALLMENT
  INCOME
  EXPENSE
  MODAL
}

enum CashReferenceType {
  SAVING
  LOAN
  INSTALLMENT
}

enum Role {
  SUPERADMIN
  ADMIN
  PENGURUS
  KETUA
  BENDAHARA
  SEKRETARIS
}

enum SavingType {
  POKOK
  WAJIB
  SUKARELA
}

enum LoanStatus {
  DIAJUKAN
  DISETUJUI
  DITOLAK
  LUNAS
}

enum MemberStatus {
  AKTIF
  NONAKTIF
  MENINGGAL
}
